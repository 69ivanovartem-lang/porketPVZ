<Window x:Class="PVZApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ПВЗ - Пункт выдачи заказов" 
        Height="650" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с информацией и поиском -->
        <Border Grid.Row="0" Background="White" CornerRadius="5" Padding="10" Margin="0 0 0 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ПВЗ №001" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Text=" | " FontSize="18" Foreground="#BDC3C7"/>
                    <TextBlock Text="Заказов сегодня: " FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="24" FontSize="14" FontWeight="Bold" Foreground="#27AE60" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="SearchBox" Width="250" Height="30" Padding="5" 
                             TextChanged="SearchBox_TextChanged"
                             ToolTip="Поиск по номеру заказа или ФИО"/>
                    <Button Content="Поиск" Width="70" Margin="5 0 0 0" 
                            Background="#3498DB" Foreground="White" BorderThickness="0"
                            Click="SearchButton_Click"/>
                    <Button Content="Обновить" Width="70" Margin="5 0 0 0" 
                            Background="#2ECC71" Foreground="White" BorderThickness="0"
                            Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Таблица с заказами -->
        <DataGrid x:Name="OrdersDataGrid" Grid.Row="1" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single" 
                  Background="White" BorderBrush="#BDC3C7" BorderThickness="1"
                  RowHeight="35" AlternatingRowBackground="#F8F9F9"
                  SelectionChanged="OrdersDataGrid_SelectionChanged">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#34495E"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <!-- Номер заказа -->
                <DataGridTextColumn Header="№ Заказа" Width="120" Binding="{Binding OrderNumber}">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                            <Setter Property="TextBlock.FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Дата -->
                <DataGridTextColumn Header="Дата" Width="100" Binding="{Binding OrderDate, StringFormat={}{0:dd.MM.yyyy}}">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- ФИО клиента -->
                <DataGridTextColumn Header="ФИО Клиента" Width="200" Binding="{Binding ClientName}"/>

                <!-- Телефон -->
                <DataGridTextColumn Header="Телефон" Width="120" Binding="{Binding Phone}"/>

                <!-- Статус -->
                <DataGridTemplateColumn Header="Статус" Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding StatusColor}" CornerRadius="3" Margin="2">
                                <TextBlock Text="{Binding Status}" 
                                           Foreground="White" 
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Сумма -->
                <DataGridTextColumn Header="Сумма" Width="100" Binding="{Binding Amount, StringFormat={}{0:C}}">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextAlignment" Value="Right"/>
                            <Setter Property="TextBlock.Margin" Value="5,0,10,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Способ получения -->
                <DataGridTextColumn Header="Получение" Width="120" Binding="{Binding DeliveryMethod}"/>

                <!-- Адрес/ПВЗ -->
                <DataGridTextColumn Header="Адрес/ПВЗ" Width="150" Binding="{Binding PickupPoint}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Нижняя панель с деталями заказа -->
        <Border Grid.Row="2" Background="White" CornerRadius="5" Padding="10" Margin="0 10 0 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Информация о выбранном заказе -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Выбран заказ: " FontSize="14" Foreground="#7F8C8D"/>
                    <TextBlock x:Name="SelectedOrderNumber" Text="-" FontSize="14" FontWeight="Bold"/>
                </StackPanel>

                <!-- Кнопки действий -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="IssueButton" Content="Выдать заказ" Width="120" Height="35"
                            Background="#27AE60" Foreground="White" BorderThickness="0"
                            IsEnabled="False" Margin="0 0 10 0"
                            Click="IssueButton_Click"/>
                    <Button x:Name="CancelButton" Content="Отменить заказ" Width="120" Height="35"
                            Background="#E74C3C" Foreground="White" BorderThickness="0"
                            IsEnabled="False" Margin="0 0 10 0"
                            Click="CancelButton_Click"/>
                    <Button Content="Добавить заказ" Width="120" Height="35"
                            Background="#3498DB" Foreground="White" BorderThickness="0"
                            Click="AddOrderButton_Click"/>
                </StackPanel>

                <!-- Детальная информация -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 10 0 0">
                    <TextBlock x:Name="OrderDetails" Text="Выберите заказ для просмотра деталей" 
                               Foreground="#7F8C8D" FontStyle="Italic"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>